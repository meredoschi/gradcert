<%%= search_form_for @search do |f| %>

	<div class="row">

		<div class="large-3 columns">
		
			<div class="field">
			
			  <th><%%= f.label t('activerecord.attributes.<%= singular_table_name %>.name')%></th>
		
			</div>

		</div>
			
		<div class="large-9 columns">
		
				<%%= f.text_field :name_cont %>  
		
		</div>
	    
	</div>


	<div class="row">
		    
		<div class="large-6 columns">
	
		  <%%= f.submit t('actions.search'), class: t('seek') %>
	
		</div>
	
	</div>
	 
<%% end %>