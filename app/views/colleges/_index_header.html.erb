<% if is_admin_or_manager(current_user) %>

	<div class="row">
	
		<div class="large-8 columns">
	
				<h2><%= t('entity').mb_chars.pluralize.upcase %></h2>
		
				<h2 class="subheader"><%= tm('college').pluralize(@colleges.total_count).pluralize.mb_chars.capitalize %> (<%= @colleges.total_count  %> /  <%= @numcolleges %>)  	</h2>

	 				
		</div>
			
		  <% if can? :create, College %>
	
				<div class="large-4 columns">
				 	<%= link_to image_tag('plus.png', class: "header-create-new", alt: t('actions.new.f')+' '+tm('college')), new_college_path %>	 
	
		  </div>
			  
		<% end %>

	</div>
	
<% else %>

	<div class="row">
	
		<div class="large-8 columns">
	
					<h2> <%= t('my.f').upcase+' '+t('entity').mb_chars.upcase %> </h2>

	
		    	<h2 class="subheader"> <%= t('activerecord.models.college').capitalize  %> </h2>
	 				
		</div>

		  <% if (can? :create, College)  && @colleges.total_count==0 %>
	
				<div class="large-4 columns">
				 	<%= link_to image_tag('plus.png', class: "header-create-new", alt: t('actions.new.f')+' '+tm('college')), new_college_path %>	 
	
		  </div>
			  
		<% end %>

	</div>
	
		
	</div>

<% end %>

