<div class="row">
		<table>
			<tr>
			
							<div class="large-4 columns">
					
								<th><strong><%= ta('contact.phone')%></strong></th>
					
							</div>
					
							<% if @contact.phone.other.present? %>
							
								<div class="large-4 columns">
						
									<th><strong><%= ta('contact.phone2')%></strong></th>
						
								</div>
					
							<% end %>

							<% if @contact.phone.mobile.present? %>
							
								<div class="large-4 columns">
						
									<th><strong><%= ta('contact.mobile')%></strong></th>
						
								</div>
							
							<% end %>
		
			</tr>						
		
			<div class="row">
		
				<tr>
					<div class="large-4 columns">
					
						<td><%= @contact.phone.main %></td>
					
							</div>

							<% if @contact.phone.other.present? %>
					
								<div class="large-4 columns">
					
									<td><%= @contact.phone.other  %></td>
					
							</div>

							<% end %>
		
							<% if @contact.phone.mobile.present? %>
												
								<div class="large-4 columns">
						
									<td><%= @contact.phone.mobile  %></td>
						
								</div>
								
							<% end %>
				</tr>
		</div>
	</table>
</div>