 <thead>
    <tr>

		<% if is_staff(current_user) && (@contacts.total_count>1) %>
			
    	<div class="row">
    
    	    <div class="large-2 columns">

	  				<th><%= t('photo').capitalize %></th>
      
    			</div>
  	  		
		    	<div class="large-3 columns">

	  				<th><%= sort_link(@search, :name, ta('contact.name'), default_order: :desc) %></th>
      
    			</div>
    			          		
    			<% if (is_admin_or_readonly(current_user) || is_manager(current_user)) %>		  
	        
			    	<div class="large-2 columns">
	
		  				<th><%= sort_link(@search, :user_institution_name, tm('institution').capitalize, default_order: :desc) %></th>
	      
	    			</div>
    			     
    			<% end %>      
				
		    	<div class="large-2 columns">

	  				<th><%= sort_link(@search, :role_name, ta('contact.role'), default_order: :desc) %></th>
      
    			</div>
    			        				
  	<% else %>

    	<div class="row">

					<div class="large-2 columns">

	  				<th><%= t('photo').capitalize %></th>
      
    			</div>
    			    
		    	<div class="large-3 columns">

	  				<th><%= ta('contact.name') %></th>
      
    			</div>
        	
	   			<% if (is_admin_or_readonly(current_user) || is_manager(current_user)) %>		  
				
			    	<div class="large-2 columns">
	
		  				<th><%= ta('institution.name') %></th>
	      
	    			</div>
    			   
    			 <% end %>     
				
		    	<div class="large-2 columns">

	  				<th><%= ta('contact.role') %></th>
      
    			</div>
  	
  	<% end %>
				
		    <div class="large-3 columns">

      		<th colspan="3"></th>

				</div>
				
			</div>
		
    </tr>
    
  </thead>