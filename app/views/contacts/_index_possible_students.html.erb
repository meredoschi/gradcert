<div class="row custom-panel9">

<table>

  <thead>
    <tr>

      <div class="row">

        <div class="large-3 columns">


          <th> <%= ta('contact.name') %></th>

        </div>

        <% if is_admin_or_manager(current_user) %>

        <div class="large-2 columns">


          <th><%= tm('institution').capitalize %></th>

        </div>

        <% end %>

        <div class="large-3 columns">

          <th><%= ta('personalinfo.tin') %></th>

        </div>

        <div class="large-3 columns">

          <th><%= t('created_at') %></th>

        </div>

        <div class="large-3 columns">

          <th colspan="3"></th>

        </div>

      </div>

    </tr>

  </thead>

  <tbody>

  <% @contacts_ready_to_become_students.each do |contact| %>
  <tr>

    <div class="large-3 columns">
      <td><%= contact.name %></td>
    </div>

    <% if is_admin_or_manager(current_user) %>

    <div class="large-2 columns">

      <td><%= contact.user.institution.name %></td>

    </div>

    <% end %>

    <div class="large-2 columns">

      <td><%= contact.personalinfo.tin %></td>

    </div>

    <div class="large-2 columns">
      <td><%= I18n.l(contact.updated_at, format: :short) %></td>
    </div>

    <div class="large-1 column">
      <td>
        <% if can? :read, contact %>
          <%= link_to t('actions.show'), contact, class: t('show') %>
        <% end %>
      </td>
    </div>

  </div>

</tr>

<% end %>

</tbody>
</table>

</div>

</div>
