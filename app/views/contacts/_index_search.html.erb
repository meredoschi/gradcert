<%= search_form_for @search do |f| %>

	<% if is_staff(current_user) %>

		<div class="row">

			<div class="field">

				<div class="large-3 columns">

					<%= f.label ta('contact.name') %>

				</div>


				<div class="large-9 columns">

					<%= f.text_field :name_cont %>

				</div>

			</div>

		</div>

	<div class="row">

		<div class="large-3 columns">

			<div class="field">

			  <th><%= f.label ta('personalinfo.tin')%></th>

			</div>

		</div>

		<div class="large-9 columns">

				<%= f.text_field :personalinfo_tin_cont %>

		</div>

	</div>

	<%= render 'index_search_role_email', f: f %>

<% if is_admin_or_manager(current_user) %>

	<div class="row">

 		<div class="field">

				<div class="large-3 columns">


				<%= f.label tm('institution').capitalize %>
				</div>

				<div class="large-9 columns">

					<%= f.select :user_institution_id_eq, options_from_collection_for_select(Institution.all, :id, :name), 		include_blank: true %>

		  	</div>

		</div>

	</div>

<% end %>


	<div class="row">

		<div class="large-6 columns">
		  <%= f.submit  t('actions.search'), class: 'buscar' %>
		</div>
	</div>

	<% end %>

<% end %>
