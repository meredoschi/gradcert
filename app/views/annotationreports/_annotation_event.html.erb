<div class="row">

	<div class="row">
			<table>
				<tr>

					<div class="large-1 column">

						<th><strong><%= I18n.t('activerecord.models.event').capitalize %></strong></th>

					</div>

					<div class="large-2 columns">

						<th><strong><%= t('kind')%></strong></th>

					</div>

					<div class="large-3 columns">

						<th><strong><%= ta('event.start')%></strong></th>

					</div>

						<div class="large-2 columns">

							<th><strong><%= ta('event.finish')%></strong></th>

						</div>

					<%# to fix %>

					<%# if event.actualdays!=event.numdays %>

						<div class="large-2 columns">

							<th><strong><%#= ta('event.virtual.numdays')%></strong></th>

						</div>

					<%# end %>

					<div class="large-2 columns">

						<th><strong><%= ta('event.virtual.actualdays')%></strong></th>

					</div>

			</tr>

				<div class="row">

					<tr>

					<div class="large-1 column">

						<td><%= link_to event.id, event %></td>

					</div>

					<div class="large-2 columns">

						<td><%= display_event_kind(event) %></td>

					</div>


					<div class="large-3 columns">

						<td><%= I18n.l(event.start, format: :compact) %></td>

					</div>

					<div class="large-3 columns">

						<td><%= I18n.l(event.finish, format: :compact) %></td>

					</div>

				<%# if event.actualdays!=event.numdays %>


					<div class="large-2 columns">

						<td><%#= event.numdays %></td>

					</div>

				<%# end %>

					<div class="large-2 columns">

							<%# to fix! %> 

						<td><%= event.numdays %></td>

					</div>

					</tr>
			</div>

		</table>
	</div>

</div>
