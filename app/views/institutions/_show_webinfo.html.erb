<% if with_website_or_email?(@institution) %>

	<div class="row">
			
		<table>
			<tr>
						
				<% if @institution.webinfo.site.present? %>
		
						<div class="large-6 columns">
			
							<th><strong><%= ta('webinfo.site')%></strong></th>
			
						</div>
		
					<% end %>
		
					<% if @institution.webinfo.email.present? %>
		
						<div class="large-6 columns">
			
							<th><strong><%= ta('webinfo.email')%></strong></th>
			
						</div>
		
					<% end %>
							
			</tr>						
		
			<div class="row">
		
				<tr>
		
							</div>
	
							<% if @institution.webinfo.site.present? %>
					
								<div class="large-6 columns">
	
								<!-- 
								
								http://stackoverflow.com/questions/2543936/rails-i18n-translating-text-with-links-inside
								
								-->
					
								<td> <%= link_to @institution.webinfo.site, "http://"+@institution.webinfo.site, data: { confirm: I18n.t("confirm.visit_external_site")}, :target => '_blank'   %> </td>
																															
								</div>
							
							<% end %>
							
	
						<% if @institution.webinfo.email.present? %>
						
							<div class="large-6 columns">
					
								<td> <%= @institution.webinfo.email %>	</td>
								
							</div>
							
						<% end %>
							
					</tr>
			</div>
		</table>
	
	
	<% end %>
	
	<% if uses_internet_social_media?(@institution) %>
	
		<table>
			<tr>
			
					<% if @institution.webinfo.facebook.present? %>

							<div class="large-4 columns">
					
								<th><strong><%= ta('webinfo.facebook')%></strong></th>
					
							</div>
					
					<% end %>
					
					<% if @institution.webinfo.twitter.present? %>
	
							<div class="large-4 columns">
					
								<th><strong><%= ta('webinfo.twitter')%></strong></th>
					
							</div>
							
					<% end %>

					<% if @institution.webinfo.other.present? %>
	
							<div class="large-4 columns">
					
								<th><strong><%= ta('webinfo.other')%></strong></th>
					
							</div>
							
					<% end %>
							
			</tr>						
		
				<div class="row">
			
					<tr>
	
						<% if @institution.webinfo.facebook.present? %>
	
							<div class="large-4 columns">
							
								<td> <%= @institution.webinfo.facebook %>						</td>
							
							</div>
	
						<% end %>
	
						<% if @institution.webinfo.twitter.present? %>
	
							<div class="large-4 columns">
							
								<td> <%= @institution.webinfo.twitter %> </td>
							
							</div>
	
						<% end %>
	
						<% if @institution.webinfo.other.present? %>
	
							<div class="large-4 columns">
							
								<td> <%= @institution.webinfo.other %> </td>
							
							</div>
	
						<% end %>
						
					</tr>
			</div>
		</table>
	</div>

	<% end %>
	
</div>