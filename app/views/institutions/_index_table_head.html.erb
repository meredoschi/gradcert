<thead>

	<div class="row">

  <tr>

		<% if is_admin_or_manager(current_user) %>

			<div class="large-2 column">
	
	   		<th><%= ta('institution.site') %></th>
	
	    </div>
			
			<div class="large-3 columns">
	
		      <th><%= sort_link(@search, :name, default_order: :desc) %></th>
	
		  </div>

			<div class="large-2 columns">
	
	   		<th>
	   		
	   		<%=tm('regionaloffice').capitalize %>

					<%= sort_link(@search, :address_municipality_regionaloffice_num, default_order: :desc) %>    
	   		
	   		</th>
	
	    </div>
	
				
			<div class="large-2 columns">
	
	
	   		<th>

	   		<%= ta('institution.municipality') %>
	   		
					<%= sort_link(@search, :address_municipality_name, default_order: :desc) %>    
	   		
	   		</th>
	    
	
	    </div>

     <% else %>

			<div class="large-2 column">
	
	   		<th><%= ta('institution.site') %></th>
	
	    </div>
			
			<div class="large-3 columns">
	
		      <th><%= t('name')  %></th>
	
		  </div>
	
				
			<div class="large-4 columns">
	    
	   		<th><%= ta('institution.municipality') %></th>
	
	    </div>
     
     
     <% end %>
	
			<div class="large-3 columns">
	
	      <th colspan="3"></th>
	
	    </div>
          
  </tr>

	</div>
	
</thead>