<table>

  <thead>
    <tr>

			<% if @assignments.total_count>1 %>
			
	    	<div class="row">
	    
		  		
			    	<div class="large-3 columns">
	
		  				<th><%= sort_link(@search, :program_programname_name, tm('program').capitalize) %></th>
	      
	    			</div>
	    			        					
						<% if is_admin_or_manager(current_user) %>
						
				    	<div class="large-2 columns">
	
			  				<th><%= sort_link(@search, :program_institution_name, tm('institution').capitalize) %></th>
	      
	  	  			</div>
	    			
	    			<% end %>

						<% if not_regular_user?(current_user) %>
						
			    		<div class="large-2 columns">
	
		  					<th><%= sort_link(@search, :supervisor_contact_name, tm('supervisor').capitalize) %></th>
	      
	    				</div>
	    			
						<% end %>
			        
					
			    	<div class="large-2 columns">
	
		  				<th><%= sort_link(@search, :start_date, ta('assignment.start_date')) %></th>
	      
	    			</div>
	
		    	<div class="large-2 columns">
	
		  				<th><%= sort_link(@search, :main, ta('supervisor.kind')) %></th>
	      
	    			</div>
	    			
	    			        		
				<% else %>
				
					<div class="row">
		  			    			        
			    	<div class="large-3 columns">
	
		  				<th><%= tm('program').capitalize %></th>
	      
	    			</div>

						<% if is_admin_or_manager(current_user) %>
						
				    	<div class="large-2 columns">
	
			  				<th><%= tm('institution').capitalize %></th>
	      
	  	  			</div>
	    			
	    			<% end %>

			    	<div class="large-2 columns">
	
		  				<th><%= tm('supervisor').capitalize %></th>
	      
	    			</div>

			    	<div class="large-2 columns">

		  				<th><%= t('start_date')%> </th>
	      
	    		
	    			</div>

			    	<div class="large-2 columns">
	
		  				<th><%= ta('supervisor.kind')  %></th>
	      
	    			</div>
	
				<% end %>
					
			    <div class="large-3 columns">
	
	      		<th colspan="3"></th>
	
					</div>
					
				</div>
				
    </tr>
    
</thead>