<%= form_for(@municipality) do |f| %>
  <% if @municipality.errors.any? %>
    <div id="error_explanation">
      <h2>O municipio n√£o pode ser gravado devido a <%= pluralize(@municipality.errors.count, "erro") %>:</h2>

      <ul>
      <% @municipality.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">

	 		<div class="large-4 columns", class: "left inline">
	
				<%= f.label ta('municipality.name')%> <br>

			</div>
	 		
	 		<div class="large-8 columns">
  
	   <%= f.text_field :name %>        	
 
			</div>

</div>

<div class="row">

	 		<div class="large-4 columns", class: "left inline">
	
				<%= f.label ta('municipality.stateregion')%> <br>

			</div>
	 		
	 		<div class="large-8 columns">
   
		  	<%= f.collection_select :stateregion_id, Stateregion.order(:name), :id, :name %>
  
			</div>

</div>

<div class="row">

 		<div class="large-2 columns", class: "left inline">

    <%= f.label ta('municipality.capital') %><br>
 	
		</div>
 		
 		<div class="large-10 columns">
	   
			<%= f.check_box :capital %>
 
		</div>

</div>

<div class="row">

	 		<div class="large-4 columns", class: "left inline">
	
				<%= f.label ta('municipality.regionaloffice')%> <br>

			</div>
	 		
	 		<div class="large-8 columns">
   
		  	<%= f.collection_select :regionaloffice_id, Regionaloffice.order(:name), :id, :name %>
  
			</div>

</div>


  <div class="row actions">
  	<%= f.submit :value => t('actions.confirm'), class: t('confirmation') %> |
  	<%= link_to 'Anular', municipalities_path, class: "anular" %>
 </div>
  
<% end %>