<%= form_for(@institutiontype) do |f| %>
  <% if @institutiontype.errors.any? %>
    <div id="error_explanation">
      <h2>Este tipo de instituição não pode ser gravado devido a <%= pluralize(@institutiontype.errors.count, "erro") %>:</h2>

      <ul>
      <% @institutiontype.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="row">

	 		<div class="large-4 columns", class: "left inline">

		  <%= f.label :name %><br>

			</div>

	 		<div class="large-8 columns">

	   <%= f.text_field :name %>

			</div>

</div>

  <div class="row actions">
  	<%= f.submit :value => t('actions.confirm'), :class => 'button small success' %> |
  	<%= link_to t('actions.cancel'), institutiontypes_path, class: "anular" %>
 </div>


<% end %>
