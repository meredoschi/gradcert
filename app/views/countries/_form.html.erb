<%= form_for(@country) do |f| %>
  <% if @country.errors.any? %>
    <div id="error_explanation">
      <h2>O país não pode ser gravado devido a <%= pluralize(@country.errors.count, "erro") %>:</h2>

      <ul>
      <% @country.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">

	 		<div class="large-4 columns", class: "left inline">

		  <%= f.label "País (Brazilian name)" %><br>

			</div>

	 		<div class="large-8 columns">

	   <%= f.text_field :brname %>

			</div>

</div>

	<div class="row">

	 		<div class="large-4 columns", class: "left inline">

		  <%= f.label "Name (nome internacional)" %><br>

			</div>

	 		<div class="large-8 columns">

	   <%= f.text_field :name %>

			</div>

</div>

<div class="row">

	 		<div class="large-4 columns", class: "left inline">

			<%= f.label "Abreviações" %>

			</div>

	 		<div class="large-2 columns", class: "left inline">

		  <%= f.label :a2 %><br>

			</div>

	 		<div class="large-2 columns">

	   <%= f.text_field :a2 %>

			</div>

	 		<div class="large-2 columns", class: "left inline">

		  <%= f.label :a3 %>

			</div>

	 		<div class="large-2 columns">

	   <%= f.text_field :a3 %>

			</div>

	</div>


	<div class="row">

	 		<div class="large-2 columns", class: "left inline">

		  <%= f.label "número" %><br>

			</div>

	 		<div class="large-2 columns">

	   <%= f.number_field :number %>

			</div>

	</div>



<div class="row actions">

  	<%= f.submit :value => t('actions.confirm'), class: 'confirmar' %> |

    <%= link_to t('actions.cancel'), countries_path, class: "anular" %>

</div>

<% end %>
