<%= form_for(@regionaloffice) do |form| %>
  <% if @regionaloffice.errors.any? %>
    <div id="error_explanation">

			<h2> <%= t('validation.messagetext.system_detected') %> <%= pluralize(@regionaloffice.errors.count, t('validation.messagetext.error')) %> <%= t('validation.messagetext.please_correct_and_retry') %> </h2>

      <ul>
      <% @regionaloffice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row custom-panel">

	<%= render 'form_identification.html.erb', form: form %>

	<%= render 'form_address.html.erb', form: form %>

	<%= render 'form_phones.html.erb', form: form %>

	<%= render 'form_webinfo.html.erb', form: form %>
	
</div>

	<% if can? :update, Regionaloffice %>
	
	   <div class="row actions">
	  	<%= form.submit :value => t('actions.confirm'), class: 'confirmar' %> |
	 
	<% end %>

  	 <%= link_to t('actions.cancel'), regionaloffices_path, class: "anular" %>
	
	</div>

<% end %>