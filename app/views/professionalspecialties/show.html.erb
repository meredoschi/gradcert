					<div class="large-2 columns">
					
						<td><%= tickmark(@professionalspecialty.legacy) %></td>
					
					</div>
					
					<% end %>
										
				</tr>
		</div>

	</table>
</div>


<div class="row">
	
	<% if can? :edit, @professionalspecialty %>

		<%= link_to t('actions.edit'), edit_professionalspecialty_path(@professionalspecialty), class: 'editar'  %> |

	<% end %>
	
	<%= link_to t('actions.back'), professionalspecialties_path,  class: 'voltar'  %>

</div>