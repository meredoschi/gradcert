<div class="row">

	<h2><%= tm('placesavailable').capitalize %></h2>

</div>

<%= @message %>

<div class="row">
		<table>
			<tr>

							<div class="large-4 columns">

								<th><strong><%= ta('placesavailable.institution_id')%></strong></th>

							</div>


			</tr>

			<div class="row">

				<tr>
					<div class="large-12 columns">

						<td><%= link_to @placesavailable.institution.name, @placesavailable.institution %></td>

					</div>

				</tr>
		</div>

	</table>
</div>


<div class="row">
		<table>
			<tr>

							<div class="large-4 columns">

								<th><strong><%= ta('placesavailable.schoolterm_id')%></strong></th>

							</div>

							<div class="large-4 columns">

								<th><strong><%= ta('placesavailable.authorized')%></strong></th>

							</div>

							<div class="large-4 columns">

								<th><strong><%= ta('placesavailable.allowregistrations')%></strong></th>

							</div>


			</tr>

			<div class="row">

				<tr>
					<div class="large-4 columns">

						<td><%= @placesavailable.schoolterm.name %></td>

					</div>

					<div class="large-4 columns">

						<td><%= @placesavailable.authorized %></td>

					</div>

					<div class="large-4 columns">

						<td><%= yes_no(@placesavailable.allowregistrations) %></td>

					</div>

				</tr>
		</div>

	</table>
</div>

<% comment do %>

<div class="row">
		<table>
			<tr>

							<div class="large-4 columns">

								<th><strong><%= ta('placesavailable.requested')%></strong></th>

							</div>


			</tr>

			<div class="row">

				<tr>
					<div class="large-12 columns">

						<td><%= @placesavailable.requested %></td>

					</div>

				</tr>
		</div>

	</table>
</div>

<div class="row">
		<table>
			<tr>

							<div class="large-4 columns">

								<th><strong><%= ta('placesavailable.accredited')%></strong></th>

							</div>


			</tr>

			<div class="row">

				<tr>
					<div class="large-12 columns">

						<td><%= @placesavailable.accredited %></td>

					</div>

				</tr>
		</div>

	</table>
</div>

<% end %>

<% if is_admin_or_manager(current_user) %>

	<%= render 'show_registrations' %>

<% end %>

<div class="row">

	<% if can? :edit, @placesavailable %>

		<%= link_to t('actions.edit'), edit_placesavailable_path(@placesavailable), class: t('edit')  %> |

	<% end %>

	<%= link_to t('actions.back'), placesavailables_path,  class: t('back')  %>

</div>
