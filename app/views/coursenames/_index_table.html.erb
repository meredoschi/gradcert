<table>
 
<%= render 'index_table_head.html.erb' %>

<tbody>
   <% @coursenames.each do |coursename| %>
      <tr>
				<div class="row">
				
	
	
		   <div class="large-2 columns">
	
        <td><%= coursename.name %></td>

			</div>
				
	
		   <div class="large-2 columns">
	
        <td><%= tickmark(coursename.active) %></td>

			</div>
				
	
		   <div class="large-3 columns">

	        <% if can? :read, coursename %>
		        <td><%= link_to t('actions.show'), coursename, class: "mostrar" %></td>
					<% end %>

        <% if can? :update, coursename %>
			      <td><%= link_to t('actions.edit'), edit_coursename_path(coursename), class: "editar" %></td>   
					<% end %>

	        <% if can? :destroy, coursename %>
		     		<td><%= link_to t('actions.delete'),coursename, :method => :delete, data: { confirm: t('confirm.delete') }, class: "remover" %></td>     
					<% end %>
	
    	</div>
    	
    		</div>
    		
      </tr>
  <% end %>
  </tbody>


</table>

<div class="row">

  <%= paginate @coursenames %>

</div>

<br>