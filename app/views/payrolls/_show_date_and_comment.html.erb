<div class="row">
		<table>
			<tr>

							<div class="large-4 columns">
					
								<th><strong><%= ta('payroll.monthworked')%></strong></th>
					
							</div>
			

							<div class="large-4 columns">
					
								<th><strong><%= ta('payroll.paymentdate')%></strong></th>
					
							</div>

							<% if admin_or_manager?(current_user) %>
							
								<div class="large-4 columns">
					
									<th><strong><%= ta('payroll.comment')%></strong></th>
						
								</div>
					
							<% end %>
								
							
			</tr>						
		
			<div class="row">
		
				<tr>

					<div class="large-4 columns">
					
						<td><%= I18n.l(@payroll.monthworked, format: :my) %></td>
					
					</div>
				
					<div class="large-4 columns">
					
						<td><%= I18n.l(@payroll.paymentdate, format: :compact) %></td>
					
					</div>

					<% if admin_or_manager?(current_user) %>

						<div class="large-4 columns">
					
							<td><%= @payroll.comment %></td>
					
						</div>
	
					<% end %>									
				</tr>

		</div>

	</table>
</div>