<%= render "show_header"%>


<div class="row">

	<div class="large-8 columns">

		<%= render "show_date_and_comment"%>

		<% if @payroll.dataentrystart.present? && @payroll.dataentryfinish.present? %>

			<%= render "show_data_entry_dates"%>

		<% end %>

		<% if admin_or_manager?(current_user) %>

			<%= render "show_amount_and_taxation"%>

		<% end %>

	</div>

	<% if @num_payroll_annotations>0 %>

		<div class="large-4 columns">

			<%= render "show_reports"%>

		</div>

	<% end %>

</div>

<%= render "show_buttons"%>
