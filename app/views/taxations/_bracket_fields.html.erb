<div class="nested-fields">

	<div class="row">

		<div class="large-1 column", class: "left inline">

			<%= f.label tm('bracket').capitalize %>

		</div>

		<div class="large-1 column">

			<%= f.number_field :num, in: 1..10 %>

		</div>

		<div class="large-1 column", class: "left inline">

			<%= f.label ta('bracket.start') %>

		</div>

		<div class="large-2 columns">

			<%= f.text_field :start %>

		</div>

		<div class="large-1 column", class: "left inline">

			<%= f.label ta('bracket.finish') %>

		</div>

		<div class="large-2 columns">

			<%= f.text_field :finish %>

		</div>
		
		<div class="large-2 columns", class: "left inline">

			<%= f.label ta('bracket.unlimited') %>

		</div>

		<div class="large-1 column">

			<%= f.check_box :unlimited %>

		</div>
		
	</div>	
	
	<div class="row">

		<div class="large-2 columns", class: "left inline">
			_
			
		</div>
		
		<div class="large-1 column", class: "left inline">

			<%= f.label ta('bracket.rate') %>

		</div>

		<div class="large-2 columns">

			<%= f.number_field :rate, min: 0, max: 100, :step => 0.01 %>

		</div>

		<div class="large-1 column", class: "left inline">

			<%= f.label ta('bracket.deductible') %>

		</div>
		
		<div class="large-2 columns">

			<%= f.text_field :deductible %>

		</div>

		<div class="large-3 columns">

			<%= link_to_remove_association t('actions.delete'), f, class: "remove-nested" %>

		</div>

	</div> 
	
	
</div>
