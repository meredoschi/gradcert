<div class="row">

	<div class="large-8 columns">

	<% if @programsituations.total_count>0 %>
	
		<% if admin_or_manager?(current_user) %>

	    	<h2> <%= tm('programsituation').pluralize(@programsituations.total_count).to_s.upcase  %> 
 				
 		<% else %>
 		
	    	<h2> <%= t('my.mp').capitalize+" "+tm('programsituation').pluralize %>
	  		
  	<% end %>

		(<%= @programsituations.total_count  %> /  <%= @numprogramsituations %>)</h2> 		

	<% else %>

		<div data-alert class="alert-box warning">

	    	<h2> <%= t('none.m').capitalize+" "+tm('programsituation')+" "+t('registered_so_far.m') %>
	
		</div>
		
	<% end %>
	
	</div>
	
<%# if assessments_exist?(current_user) %>

	  <% if can? :create, Programsituation %>

			<div class="large-4 columns">
			 	<%= link_to image_tag('plus.png', class: "header-create-new", alt: t('actions.new.m')+' '+tm('programsituation')), new_programsituation_path %>	 

	  	</div>
		  
		<% end %>
	
	<%# end %>

	
</div>