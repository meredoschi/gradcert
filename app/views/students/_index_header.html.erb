<% if regular_user?(current_user)  || is_own_user(current_user) %>

	<div class="row">
	
		<div class="large-10 columns">
	
			<h2><%= t('my.f').capitalize+' '+tm('registration') %></h2>
			
			 				
	  </div>
			  
	</div>
	
<% else %>

	<div class="row">
	
		<div class="large-8 columns">
	

			<h2 class="text-center"><%= t('people').upcase %></h2>
	
    	<h2 class="subheader"> <%= t('activerecord.models.student').pluralize.mb_chars.capitalize  %> (<%= @students.total_count %>/<%= @numstudents %>)</h2>

	  </div>

	  <% if (can? :create, Student) && retrieve_possible_students_for(current_user).count>0 %>

			<div class="large-4 columns">
				 	<%= link_to image_tag('plus.png', class: "header-create-new", alt: t('actions.new.m')+' '+tm('student')), new_student_path %>	 
	
		  </div>
			  
		<% end %>
			  
	</div>

<% end %>