<div class="row">

	<h2><%= I18n.t('devise-custom.forgot_your_password') %></h2>

</div>
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

<div class="row">


	  <div> <%= f.label I18n.t('devise-custom.provide_your_registered_email') %> <br />
	  <%= f.email_field :email, autofocus: true %></div>
</div>

<div class="row">


	<div><%= f.submit  I18n.t('devise-custom.send_me_instructions_to_generate_a_new_password'), :class => 'button small' %></div>


</div>

<% end %>

<%= render "devise/shared/links" %>
