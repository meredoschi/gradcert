<h2><%= I18n.t('devise-custom.change_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password %> <%= I18n.t('devise-custom.new_password') %> %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "off" %></div>

  <div><%= f.label :password_confirmation, I18n.t('devise-custom.repeat_new_password') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>


 <div class="actions">
  	<%= f.submit :value => t('actions.confirm'), :class => 'button small success' %> |
  	 <%= link_to t('actions.cancel'), root_path, class: "anular" %>
  </div>


<% end %>

<%= render "devise/shared/links" %>
