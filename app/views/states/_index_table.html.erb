	<table>
	  <thead>
	    <tr>
				<div class="row">
		      <th><%= ta('state.name')%></th>
		      <th><%= ta('state.abbreviation')%></th>
		      <th><%= ta('state.country')%></th>
		      <th colspan="3"></th> 
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @states.each do |state| %>
	      <tr>
	        <td><%= state.name %></td>
	        <td><%= state.abbreviation %></td>
	       	<td><%#= state.country.brname %></td>
	        <% if can? :read, state %>
		        <td><%= link_to t('actions.show'), state, class: "mostrar" %></td>
					<% end %>
	
	        <% if can? :update, state %>
			      <td><%= link_to t('actions.edit'), edit_state_path(state), class: "editar" %></td>   
					<% end %>
	
	        <% if can? :destroy, state %>
		     		<td><%= link_to t('actions.delete'),state, :method => :delete, data: { confirm: t('confirm.delete') }, class: "remover" %></td>     
					<% end %>
					  
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	<br>
</div>

<div class="row">

  <%= paginate @states %>

  <br>
		 
</div>