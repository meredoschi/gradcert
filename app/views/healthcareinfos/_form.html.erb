<%= form_for(@healthcareinfo) do |f| %>
  <% if @healthcareinfo.errors.any? %>
    <div id="error_explanation">
			<h2><%= t('validation.messagetext.system_detected') %> <%= pluralize(@healthcareinfo.errors.count, t('validation.messagetext.error')) %> <%= t('validation.messagetext.please_correct_and_retry') %></h2>

      <ul>
      <% @healthcareinfo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% if is_admin_or_manager(current_user) %>

		<% if action_name=='new' %>

			<div class="row">
	
			
			 		<div class="large-3 columns", class: "left inline">
			
			    <%= f.label ta('institution.name') %><br>
			
					</div>
			 		
			 		<div class="large-9 columns">
		  
					  <%= f.collection_select :institution_id, Institution.registered.without_healthcareinfo, :id, :name,  {prompt: true} %>
				
					
					</div>
				
		 	</div>	 				  
	

	<% else %>

		<div class="row">
	
			<h2><%= link_to @healthcareinfo.institution_name, @healthcareinfo.institution %><h2>

		</div>
		
	<% end %>

<% end %>

<div class="row">

	<div class="panel callout">
	
			<fieldset>
	    	<legend><%= t('facilities').capitalize %></legend>
	
	
				<div class="row">
			
		 		<div class="large-4 columns", class: "left inline">
		
			    <%= f.label ta('healthcareinfo.emergencyroombeds')  %><br>
	
				</div>
		 		
		 		<div class="large-8 columns">
	  
	  		   <%= f.number_field :emergencyroombeds, min: 0 %>
	
				</div>
	
			</div>

			<div class="row">
			
		 		<div class="large-4 columns", class: "left inline">
		
			    <%= f.label ta('healthcareinfo.icubeds')  %><br>
	
				</div>
		 		
		 		<div class="large-8 columns">
	  
	  		   <%= f.number_field :icubeds, min: 0 %>
	 
				</div>
	
			</div>	 		

	
			<div class="row">
			
		 		<div class="large-4 columns", class: "left inline">
		
			    <%= f.label ta('healthcareinfo.totalbeds')  %><br>
	
				</div>
		 		
		 		<div class="large-8 columns">
	  
				   <%= f.number_field :totalbeds, min: 0 %>
				
				</div>
	
			</div>	 		
	
	
	
			<div class="row">
			
		 		<div class="large-4 columns", class: "left inline">
		
			    <%= f.label ta('healthcareinfo.ambulatoryrooms')  %><br>
	
				</div>
		 		
		 		<div class="large-8 columns">
	 
	  		   <%= f.number_field :ambulatoryrooms, min: 0 %>
	 
				</div>
	
			</div>
	
	
			<div class="row">
			
		 		<div class="large-4 columns", class: "left inline">
		
			    <%= f.label ta('healthcareinfo.labs')  %><br>
	
				</div>
		 		
		 		<div class="large-8 columns">
	  
	  		   <%= f.number_field :labs, min: 0 %>
	
				</div>
	
			</div>
				
			<div class="row">
			
		 		<div class="large-4 columns", class: "left inline">
		
			    <%= f.label ta('healthcareinfo.equipmenthighlights')  %><br>
	
				</div>
		 		
		 		<div class="large-8 columns">
	  
	  		   <%= f.text_area :equipmenthighlights %>
	
				</div>
	
			</div>
	
		</fieldset>
	</div>
	
		<div class="panel">
	
			<fieldset>
	    	<legend><%= t('yearly_statistics') %></legend>
	
			<div class="row">
			
		 		<div class="large-2 columns", class: "left inline">
		
			    <%= f.label ta('healthcareinfo.consultations')  %><br>
	
				</div>
		 		
		 		<div class="large-2 columns">
	  
	  		   <%= f.number_field :consultations, min: 0 %>
	
				</div>
	
		 		<div class="large-2 columns", class: "left inline">
		
			    <%= f.label ta('healthcareinfo.admissions')  %><br>
	
				</div>
		 		
		 		<div class="large-2 columns">
	  
	  		   <%= f.number_field :admissions, min: 0 %>
	
				</div>
	
		 		<div class="large-2 columns", class: "left inline">
		
			    <%= f.label ta('healthcareinfo.surgeries')  %><br>
	
				</div>
		 		
		 		<div class="large-2 columns">
	  
	  		   <%= f.number_field :surgeries, min: 0 %>
	
				</div>
	
			</div>
			
			<div class="row">
			
		 		<div class="large-2 columns", class: "left inline">
		
			    <%= f.label ta('healthcareinfo.radiologyprocedures')  %><br>
	
				</div>
		 		
		 		<div class="large-2 columns">
	  
	  		   <%= f.number_field :radiologyprocedures, min: 0 %>
	
				</div>
	
		 		<div class="large-2 columns", class: "left inline">
		
			    <%= f.label ta('healthcareinfo.labexams')  %><br>
	
				</div>
		 		
		 		<div class="large-6 columns">
	  
	  		   <%= f.number_field :labexams, min: 0 %>
	
				</div>
	
			</div>  
	
		</legend>
	
	</div>

</div>
	<% if can? :update, Healthcareinfo %>
	
	   <div class="row actions">
	  	<%= f.submit :value => t('actions.confirm'), class: t('confirmation') %> |
	 
	<% end %>

  	 <%= link_to t('actions.cancel'), healthcareinfos_path, class: "anular" %>
  </div>
  
<% end %>