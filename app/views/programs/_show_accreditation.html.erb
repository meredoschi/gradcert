
	<div class="row">
	
	<div class="alert-box info">
		
		<table>
			<tr>
	
					<div class="large-6 columns">
			
					
								<th> <%= t('accreditation_status') %> </th>
	
					</div>
	
					<div class="large-6 columns">
	
						<th><em><%= accreditation_status(@program.accreditation) %></em></th>
						
					</div>
					
			</tr>						
		
		
				<% if @program.accreditation.original_or_was_renewed? %>
				
					<%= render 'show_accreditation_start_date.html.erb' %>
				
				<% end %>
			
				<% if @program.accreditation.renewal.present? && @program.accreditation.was_renewed? %>
			
					<%= render 'show_accreditation_renewal.html.erb' %>
				
				<% end %>
			
				<% if @program.accreditation.was_suspended? %>
				
					<%= render 'show_accreditation_suspension.html.erb' %>
					
				<% end %>
			
				<% if @program.accreditation.was_revoked? %>
				
					<%= render 'show_accreditation_revocation.html.erb' %>
				
					<% if @program.accreditation.suspension.present?	%>
				
						<%= render 'show_accreditation_suspension.html.erb' %>
				
					<% end %>
			
					<% if @program.accreditation.renewal.present?	%>
				
						<%= render 'show_accreditation_renewal.html.erb' %>
				
					<% end %>
				
					<% if @program.accreditation.start.present?	%>
				
						<%= render 'show_accreditation_start_date.html.erb' %>
				
					<% end %>
						
				<% end %>
				
	</table>
	
</div>