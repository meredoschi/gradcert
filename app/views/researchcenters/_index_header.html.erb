<% if admin_or_manager?(current_user) %>

	<div class="row">
	
		<div class="large-8 columns">

			<h2><%= t('entity').to_s.pluralize.upcase %></h2>
		
			<h2 class="subheader"><%= tm('researchcenter').pluralize(@researchcenters.total_count).pluralize.to_s.capitalize %> (<%= @researchcenters.total_count  %> /  <%= @numresearchcenters %>)  	</h2>
	 				
		</div>
			
		  <% if can? :create, Researchcenter %>
	
				<div class="large-4 columns">
				 	<%= link_to image_tag('plus.png', class: "header-create-new", alt: t('actions.new.m')+' '+tm('researchcenter')), new_researchcenter_path %>	 
	
		  </div>
			  
		<% end %>

	</div>
	
<% else %>

	<div class="row">
	
		<div class="large-8 columns">
	
					<h2><%= t('my.f').upcase+' '+t('entity').to_s.upcase %></h2>

		    	<h2 class="subheader"> <%= t('activerecord.models.researchcenter').capitalize  %> </h2>
	 				
		</div>

		  <% if (can? :create, Researchcenter)  && @researchcenters.total_count==0 %>
	
				<div class="large-4 columns">
				 	<%= link_to image_tag('plus.png', class: "header-create-new", alt: t('actions.new.m')+' '+tm('researchcenter')), new_researchcenter_path %>	 
	
		  </div>
			  
		<% end %>

	</div>
	
		
	</div>

<% end %>