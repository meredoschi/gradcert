<%= render 'show_header.html.erb' %>

<% @registrations_with_absences.each_with_index do |registration,i| %>

  <div class="row">
  <h4>

    <%= display_institution_name_for(registration, i) %>
  </h4>

  </div>

  <div class="row">

    <h5>

      <%=  link_to registration.name_ids_schoolyear_institution_abbrv, registration %>

    </h5>

  </div>

  <div class="row">

    <h6>

      <%= display_number_absences_for_registration_on_payroll(registration,@payroll) %>

    </h6>

  </div>


<% end %>

<% if can? :read, @payroll %>

<div class="row">

  <td><%= link_to t('actions.print'), absences_payroll_path(@payroll), :onclick => 'window.print();return false;', class: 'small button info'%>|

    <%= link_to t('actions.back'), @payroll, class: t('back') %>

  </td>

</div>

<% end %>
